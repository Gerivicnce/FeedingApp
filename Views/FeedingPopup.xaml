<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
              xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
              x:Class="FeedingApp.Views.FeedingPopup"
              CanBeDismissedByTappingOutsideOfPopup="False">
    <VerticalStackLayout Padding="20" Spacing="12">
        <Label Text="Etetési adatok" FontAttributes="Bold" FontSize="18" />

        <Entry Placeholder="Tömeg (g)"
               Keyboard="Numeric"
               Text="{Binding CurrentWeight}" />

        <Editor Placeholder="Megjegyzés (opcionális)"
                AutoSize="TextChanges"
                Text="{Binding CurrentNotes}" />

        <Button Text="Fotó kiválasztása"
                Clicked="OnPickPhotoClicked" />

        <Label Text="{Binding CurrentPhotoPath}"
               FontSize="12"
               TextColor="Gray"
               LineBreakMode="TailTruncation"
               IsVisible="{Binding CurrentPhotoPath, Converter={StaticResource StringNotEmptyConverter}}" />

        <HorizontalStackLayout Spacing="8">
            <Button Text="Mégse"
                    BackgroundColor="LightGray"
                    TextColor="Black"
                    Clicked="OnCancelClicked" />

            <Button Text="Mentés" Clicked="OnSaveClicked" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</toolkit:Popup>
