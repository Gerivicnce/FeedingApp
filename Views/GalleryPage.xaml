<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Name="GalleryPageView"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:FeedingApp.ViewModels"
             xmlns:models="clr-namespace:FeedingApp.Models"
             xmlns:views="clr-namespace:FeedingApp.Views"
             x:Class="FeedingApp.Views.GalleryPage"
             Title="Galéria"
             x:DataType="viewModels:GalleryViewModel">

    <VerticalStackLayout Padding="10" Spacing="12">
        <Button Text="Megosztás"
                Command="{Binding ShareCommand}"
                CommandParameter="{Binding SelectedPhoto.PhotoPath}"
                IsEnabled="{Binding SelectedPhoto, Converter={StaticResource NullToBoolConverter}}" />

        <CollectionView ItemsSource="{Binding Photos}"
                        SelectionMode="Single"
                        SelectedItem="{Binding SelectedPhoto}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:FeedingEvent">
                    <Grid Padding="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="200" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Image Grid.Row="0"
                               Aspect="AspectFill"
                               Source="{Binding PhotoPath}" />

                        <Label Grid.Row="1"
                               Text="Koppints a megosztáshoz"
                               FontAttributes="Italic"
                               HorizontalOptions="Center"
                               TextColor="Gray" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
