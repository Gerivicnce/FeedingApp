<ContentPage x:Name="AnimalsPageView"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FeedingApp.Views.AnimalsPage"
             Title="Állatok"
             x:DataType="viewModels:AnimalsViewModel"
             xmlns:viewModels="clr-namespace:FeedingApp.ViewModels"
             xmlns:models="clr-namespace:FeedingApp.Models"
             xmlns:views="clr-namespace:FeedingApp.Views">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Új"
                     Priority="0"
                     Command="{Binding AddAnimalCommand}" />
    </ContentPage.ToolbarItems>

    <Grid Padding="10" RowSpacing="10">
        <CollectionView x:Name="AnimalsCollection"
                        ItemsSource="{Binding Animals}"
                        SelectionMode="Single"
                        SelectedItem="{Binding SelectedAnimal}">
            <CollectionView.EmptyView>
                <Label Text="Még nincs felvett állat. Kattints az Új gombra!"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       TextColor="Gray"
                       Padding="20" />
            </CollectionView.EmptyView>

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Animal">
                    <Frame Padding="10"
                           Margin="0,4"
                           BorderColor="#dddddd"
                           HasShadow="False">
                        <Grid ColumnSpacing="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <StackLayout>
                                <Label Text="{Binding Name}" FontAttributes="Bold" />
                                <Label Text="{Binding Species}" FontSize="12" />
                                <Label Text="{Binding FeedingIntervalDays,
                                                      StringFormat='Etetés: {0} naponta'}"
                                       FontSize="10" />
                            </StackLayout>

                            <VerticalStackLayout Grid.Column="1" Spacing="6" HorizontalOptions="End">
                                <Button Text="Szerkesztés"
                                        FontSize="12"
                                        Padding="8,4"
                                        Command="{Binding BindingContext.EditAnimalCommand, Source={x:Reference AnimalsPageView}}"
                                        CommandParameter="{Binding .}" />
                                <Button Text="Törlés"
                                        FontSize="12"
                                        Padding="8,4"
                                        BackgroundColor="Tomato"
                                        TextColor="White"
                                        Command="{Binding BindingContext.DeleteAnimalCommand, Source={x:Reference AnimalsPageView}}"
                                        CommandParameter="{Binding .}" />
                            </VerticalStackLayout>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
