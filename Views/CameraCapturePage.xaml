<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:camera="clr-namespace:CommunityToolkit.Maui.Views;assembly=CommunityToolkit.Maui.Camera"
             x:Class="FeedingApp.Views.CameraCapturePage"
             Title="Új fotó készítése">
    <Grid RowDefinitions="*,Auto"
          RowSpacing="12"
          Padding="12">
        <camera:CameraView x:Name="Camera"
                           Grid.Row="0"
                           CaptureMode="Photo"
                           CamerasLoaded="OnCamerasLoaded"
                           MediaCaptured="OnMediaCaptured"
                           HorizontalOptions="Fill"
                           VerticalOptions="Fill" />

        <VerticalStackLayout Grid.Row="1"
                              Spacing="12">
            <Label x:Name="StatusLabel"
                   Text="Kamera inicializálása..."
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center" />

            <Grid ColumnDefinitions="*,*,*" ColumnSpacing="8">
                <Button Grid.Column="0"
                        Text="Váltás"
                        Clicked="OnSwitchCameraClicked" />
                <Button Grid.Column="1"
                        Text="Fotó készítése"
                        Clicked="OnCaptureClicked" />
                <Button Grid.Column="2"
                        Text="Mégse"
                        Clicked="OnCancelClicked" />
            </Grid>
        </VerticalStackLayout>
    </Grid>
</ContentPage>
